<% layout('./layout/boilerplate') -%>
<form action="/register" class="needs-validation" novalidate method="post">
   <div class="mb-2">
      <label for="username" class="form-lable">Username</label>
      <input
         type="text"
         class="form-control"
         name="username"
         id="username"
         required
      />
      <div class="valid-feedback">Looks good!</div>
   </div>
   <div class="mb-2">
      <label for="email" class="form-lable">Email</label>
      <input
         type="email"
         class="form-control"
         name="email"
         id="email"
         required
      />
      <div class="valid-feedback">Looks good!</div>
   </div>
   <div class="mb-2">
      <label for="password" class="form-lable">Password</label>
      <input
         type="password"
         class="form-control"
         name="password"
         id="password"
         required
      />
      <div class="valid-feedback">Looks good!</div>
   </div>
   <button class="btn btn-success">Register</button>
</form>
